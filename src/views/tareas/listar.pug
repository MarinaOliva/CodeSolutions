td.text-end
  - var puedeEditar = usuario && (
  -   usuario.access_role === 'jefe_proyecto' ||
  -   usuario.access_role === 'soporte' ||
  -   (usuario.access_role === 'desarrollador' && tarea.empleadosAsignados && tarea.empleadosAsignados.some(function(e){ return e && e._id.toString() === usuario.empleadoId.toString(); }))
  - );
  - var puedeEliminar = usuario && usuario.access_role === 'jefe_proyecto';

  if puedeEditar || puedeEliminar
    .btn-group(role="group")
      //- EDITAR
      if puedeEditar
        a.btn.btn-sm.btn-outline-warning(href=`/tareas/editar/${tarea._id}`) Editar

      //- ELIMINAR
      if puedeEliminar
        form(action=`/tareas/eliminar/${tarea._id}?_method=DELETE`, method="POST", style="display:inline")
          button.btn.btn-sm.btn-outline-danger(type="submit", onclick="return confirm('Â¿Seguro que quieres eliminar esta tarea?')") Eliminar
  else
    span.text-muted --
