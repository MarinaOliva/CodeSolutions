extends ../layouts/main

block contenido
  .row.justify-content-center
    .col-lg-6
     
      .card.shadow-sm
        .card-header
          h1.mb-0 #{titulo}
        
        .card-body
          p.card-text Seleccione el reporte que desea generar:
          
          //- Usar un ListGroup para el men√∫
          .list-group
            each opcion in opciones
              //- Efecto hover
              a.list-group-item.list-group-item-action(href=opcion.url) #{opcion.nombre}