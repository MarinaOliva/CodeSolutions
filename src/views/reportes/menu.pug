extends ../layouts/main

block contenido
  .row.justify-content-center
    .col-lg-6
     
      .card.shadow-sm
        .card-header
          h1.mb-0 #{titulo}
        
        .card-body
          p.card-text Seleccione el reporte que desea generar:
          
          .list-group
            each opcion in opciones
              if usuario && (usuario.rol === 'gerente_admin' || usuario.rol === 'jefe_proyecto' || usuario.rol === 'contador')
                a.list-group-item.list-group-item-action(href=opcion.url) #{opcion.nombre}
              else
                //- Si no tiene permiso, mostrar opci√≥n desactivada
                span.list-group-item.text-muted #{opcion.nombre} (sin permiso)
